{
  "name": "elevator-management-api",
  "version": "1.0.0",
  "description": "Real-time elevator management system",
  "main": "server.js",
  "keywords": ["elevator", "management", "api", "real-time", "websocket", "scheduling"],
  "author": "Elevator Management Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "db:setup": "node src/database/setup.js setup",
    "db:reset": "node src/database/setup.js reset",
    "db:migrate": "node src/database/setup.js migrate",
    "db:test": "node src/database/setup.js test",
    "db:create": "node src/database/setup.js create",
    "logs:cleanup": "node -e \"require('./src/services/loggingService').cleanupOldLogs(30)\"",
    "system:status": "curl -s http://localhost:4000/api/system/status | json_pp || curl -s http://localhost:4000/api/system/status",
    "validate": "npm run lint && npm run test",
    "setup": "npm install && npm run db:setup",
    "production": "NODE_ENV=production npm start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.3",
    "sequelize": "^6.34.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "ws": "^8.14.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.3",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/database/migrations/**",
      "!src/config/**"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/its-coded-coder/Elevator-API.git"
  },
  "bugs": {
    "url": "https://github.com/its-coded-coder/Elevator-API.git/issues"
  },
  "homepage": "https://github.com/its-coded-coder/Elevator-API.git#readme"
}